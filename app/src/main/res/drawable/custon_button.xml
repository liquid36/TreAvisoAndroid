<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ff90c9ff"
                android:endColor="#ffe0e1ff"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffc6c2c6" />
            <corners  android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#ffff6400"
                android:endColor="#ffffdac4"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#ff8b786e" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#ffff836d"
                android:endColor="#ffffc3c5"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ffc6c2c6" />
            <corners  android:radius="20dp" />

        </shape>
    </item>
</selector>